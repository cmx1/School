<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <include
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/fragement_title"
        />


    <android.support.v4.view.ViewPager
        android:layout_below="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:id="@+id/main_viewpager"

        ></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_below="@id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/main_bottom"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/main_btn_baoxiu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/select01"
            />

        <ImageButton
            android:id="@+id/main_btn_weixiu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"


            android:background="@drawable/select02"
            />

        <ImageButton
            android:id="@+id/main_btn_my"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"

            android:background="@drawable/select03"
            />

        <ImageButton
            android:id="@+id/main_btn_more"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"

            android:background="@drawable/select04"
            />


    </LinearLayout>

</RelativeLayout>
